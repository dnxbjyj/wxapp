<view class="title" bindtap="actionSheetTap">
    <text class="pull-left">{{"<<"}}</text>
    {{title}}
    <text class="pull-right">{{">>"}}</text>
</view>

<view class="time">
    <view class="big-circle blue1 first"></view>
    <view animation="{{leftAnimationData}}" class="big-circle blue2 right first"></view>
    <view class="circle white first"></view>

    <view class="big-circle blue1 second"></view>
    <view animation="{{rightAnimationData}}" class="big-circle blue2 right second"></view>
    <view class="circle white second"></view>
</view>

<view class="btnGroup">
    <button class="btn" bindtap="leftStart">正方发言</button>
    <button class="btn" bindtap="rightStart">反方发言</button>
</view>

<view class="desc">
    <text>
        {{desc}}
    </text>
</view>