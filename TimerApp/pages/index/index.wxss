page{
  background: #336699;
  color: white;
  font-family: "黑体","宋体";
}

.title{
    color: white;
    font-size: 20px;
    text-align: center;
    line-height: 30px;
    background-color: orange;
    box-shadow: 2px 2px 10px #b8b8b8;
    margin-bottom: 10px;
}

.desc{
    color: white;
}

.big-circle{
    width: 150px;
    height: 150px;
    position: absolute;
    border-radius: 50%;
}

.time{
    height: 160px;
}

.right{
    clip:rect(0,auto,auto,75px);
    background-color: blue;
}

.blue1{
    background-color:#99ccff;
}

.blue2{
    background-color:#0099ff;
}

.white{
    background-color: white;
}

.btnGroup{
    display: flex;
    flex-direction: row;
}

.btn{
    background: #0099cc;
    color: white;
}

.circle{
    width: 130px;
    height: 130px;
    border-radius: 50%;
    position: absolute;
    margin-left: 10px;
    margin-top: 10px;
}

.first{
    left: 10rpx;
}

.second{
    left:390rpx;
}
