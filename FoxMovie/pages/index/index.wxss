page{
  font-family: 微软雅黑,宋体;
  min-height: 100%;
  background-color: #3a3a3a;
}

.content{
  min-height: 100%;
  width: 100%;
}

.movie{
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
  flex-direction: row;
  padding-top: 5px;
}

.pic image{
  width: 100px;
  height: 150px;
}

.movie-info{
  padding-left: 20px;
}

.basic-info{
  color: #fff;
  font-size: 10px;
  padding-top: 10px;
  line-height: 20px;
  padding-bottom: 10px;
}

.hr{
  height: 2px;
  width: 100%;
  background-color: black;
  border-top: white solid 1px;
  border-bottom: white solid 1px;
  opacity: 0.2;
}